mixin panel(propList, path)
  each item, idx in propList
    if item.children
      .panel.panel-default
        .panel-heading
          .panel-title
            a(href=item.link)=item.label
            a.collapsed(
              data-toggle="collapse"
              data-parent="#accordion-" + path
              href="#collapse-" + path + "-" + item.id)
              .fa.fa-plus
        .panel-collapse.collapse(id="collapse-" + path + "-" + item.id)
          .panel-body
            .panel-group(id="accordion-" + path + "-" + item.id)
              +panel(item.children, path + "-" + item.id)
    else
      li
        a(href=item.link)=item.label



.page.container-fluid.shop-list.shop-list
  .row
    aside.col-sm-3.col-xs-12
      .panel-group(id="accordion-1")
        each parent, pidx in list
          .panel.panel-default
            .panel-heading
              .panel-title
                a(href=parent.link)=parent.label
                if (parent.children)
                  a.collapsed(
                    data-toggle="collapse"
                    data-parent="#accordion-1"
                    href="#collapse-" + parent.id)
                    .fa.fa-plus
            if (parent.children)
              .panel-collapse.collapse(id="collapse-" + parent.id)
                .panel-body
                  ul.panel-group(id="accordion-1-" + parent.id)
                    +panel(parent.children, "1-" + parent.id)
    main.col-sm-9.col-xs-12.append

